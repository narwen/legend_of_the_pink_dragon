%html
  %head
    %title
      LegendOfThePinkDragon
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %header
      .slide-right
        - if current_user
          Welcome, #{current_user.username}
          = link_to("Logout", sign_out_path)
    - if notice
      .flash-notice=notice
    - if alert
      .flash-alert=alert
    = yield

